<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/jpg" href="images/2.jpg" />
    <title>@ViewBag.Title - Muesli madness</title>

    @*@Scripts.Render("~/bundles/modernizr")*@

    <!-- Bootstrap core css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <!-- Custom stylesheets -->
    @Styles.Render("~/Content/css")

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i" rel="stylesheet">

</head>
<body>

    <header>
        <nav class="navbar navbar-default sticky-top navbar-expand-lg navbar-light bg-light">

            <div class="container">
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Order", "Index", "Order", new { @class = "nav-item nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Our plans", "Index", "Range", new { @class = "nav-item nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Admin", "Index", "Admin", new { @class = "nav-item nav-link" })
                        </li>
                        <li class="nav-item">
                            @*<a class="nav-item nav-link disabled" href="#">Disabled <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-primary" })</li></a>*@
                        </li>
                    </ul>
                </div>

                <div class="form-inline my-2 my-lg-0">
                    <ul class="navbar-nav mr-auto">
                    <li class="row justify-content-end">
                        @if (Session["Username"] != null)
                        {
                            <span>Privet, </span><strong>@Html.ActionLink(Session["Username"].ToString(), "Account", "Account", new { area = "" }, new { @class = "nav-item nav-link" })</strong> <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal3">Sign Out</button>
                    }
                    else
                    {
                        
                        @Html.ActionLink("Sign In", "Login", "Account", new { area = "" }, new { @class = "btn btn-primary fa fa-user-circle-o" })
                        @*@Html.ActionLink("Login", "Account", null, new { @class = "nav-item nav-link", data_toggle = "modal", data_target = "#exampleModal2" })*@
                    }
                </li>
                <li>@Html.Action("Summary", "Cart")</li>
                </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container">

        @RenderBody()

    </div>

    <footer class="bg-light">

        <div class="container">
            <div class="row">

                <div class="col-sm-3">
                    <h5>Home</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our Plans</a></li>
                        <li><a href="#">Create a plan</a></li>
                    </ul>
                </div>

                <div class="col-sm-3">
                    <h5>Services</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Track order</a></li>
                        <li><a href="#">Delivery & Returns</a></li>
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="col-sm-3">
                    <h5>Contact us</h5>
                    <address>
                        Aarhus,Denmark<br>
                        Klostertorvet 67<br>
                        <abbr title="Phone">P:</abbr> +45 48590322<br>
                        <abbr title="Email">E:</abbr> <a href="mailto:muesli@madness.dk">muesli@madness.dk</a>
                    </address>
                </div>
                <div class="col-sm-3">
                    <h5>Follow us</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our Plans</a></li>
                        <li><a href="#">Create a plan</a></li>
                    </ul>
                </div>

            </div><!-- row end -->
          </div><!-- container end  -->

    </footer>


    @*@Scripts.Render("~/bundles/jquery")
