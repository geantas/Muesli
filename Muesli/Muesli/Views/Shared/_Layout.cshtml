<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Muesli madness</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

</head>
<body>


    <nav class="navbar navbar-expand-lg sticky-top navbar-light bg-light">
        @Html.ActionLink("Muesli madness", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Order", "Index", "Order", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Our range", "Index", "Range", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Admin", "Index", "Admin", new { @class = "nav-link" })
                </li>
                <li>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#loginModal">
                        Launch demo modal
                    </button>
                </li>
            </ul>

            <span class="navbar-text">
                @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-default" }) |

                @Html.Action("Summary", "Cart")
            </span>
        </div>
    </nav>


    <div class="container">
    <!-- Content here -->

        @RenderBody()

        <hr />

    </div>

    <!-- Footer -->
    <footer>
        <div class="container">

            <p>&copy; @DateTime.Now.Year - Muesli madness</p>

        </div>
    </footer>

    <!-- Partial view -->
    @{
        Html.RenderPartial("_Signin");
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        var showDiv = function (e) {
            e.preventDefault();
            $("#dvContents").show();
        }

        var hideDiv = function (e) {
            e.preventDefault();
            $("#dvContents").hide();
        }



        $("#btnAddToCart").click(function () {
            $("#dvContents").toggle("fast", function () {
                // Animation complete.
            });
        })

        //$("#btnAddToCart").click(showDiv);
        $("#continue-shopping").click(hideDiv);
    </script>




</body>

</html>
